{
    "name": "cmsmean",
    "version": "1.1.0",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsc-watch --onSuccess \"node -r ./tsconfig-paths-bootstrap.js --stack_trace_limit=100 -r trace -r clarify dist/index.js\"",
        "build": "npm run clean:dist && tsc -p tsconfig.prod.json",
        "start": "npm run clean:dist && tsc -p tsconfig.prod.json && cross-env NODE_ENV=production node -r ./tsconfig-paths-bootstrap.js dist/index.js",
        "serve": "cross-env NODE_ENV=production node -r ./tsconfig-paths-bootstrap.js dist/index.js",
        "start:pm2": "pm2 start pm2.json",
        "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit",
        "coverage": "cross-env NODE_ENV=test jest --coverage",
        "majestic": "npx majestic",
        "docs": "npm run clean:docs && jsdoc -c ./jsdoc.json ",
        "clean:dist": "rimraf dist/*",
        "clean:docs": "rimraf docs/*"
    },
    "keywords": [],
    "author": "Reiva",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.0.0",
        "clarify": "^2.1.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "cross-env": "^7.0.2",
        "express": "^4.17.1",
        "express-status-monitor": "^1.3.2",
        "fastest-validator": "^1.2.0",
        "figlet": "^1.3.0",
        "helmet": "^3.22.0",
        "http-status-codes": "^1.4.0",
        "ioredis": "^4.17.3",
        "jsonwebtoken": "^8.5.1",
        "memory-cache": "^0.2.0",
        "mongoose": "^5.9.9",
        "mongoose-paginate-v2": "^1.3.9",
        "morgan": "^1.10.0",
        "rate-limiter-flexible": "^2.1.7",
        "swagger-stats": "^0.95.17",
        "swagger-ui-express": "^4.1.4",
        "trace": "^3.1.1",
        "tsconfig-paths": "^3.9.0",
        "validator": "^13.0.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.6",
        "@types/figlet": "^1.2.0",
        "@types/helmet": "0.0.45",
        "@types/ioredis": "^4.17.2",
        "@types/jest": "^25.2.1",
        "@types/jsonwebtoken": "^8.3.9",
        "@types/memory-cache": "^0.2.1",
        "@types/mongoose": "^5.7.10",
        "@types/mongoose-paginate-v2": "^1.3.1",
        "@types/morgan": "^1.9.0",
        "@types/node": "14.17.9",
        "@types/redis": "^2.8.17",
        "@types/supertest": "^2.0.8",
        "@types/swagger-stats": "^0.95.2",
        "@types/swagger-ui-express": "^4.1.2",
        "@types/validator": "^13.0.0",
        "better-docs": "^2.0.1",
        "husky": "^4.2.5",
        "jest": "26.0.0",
        "jsdoc": "^3.6.4",
        "mongodb-memory-server": "^6.6.1",
        "rimraf": "^3.0.2",
        "supertest": "^4.0.2",
        "ts-jest": "^25.4.0",
        "tsc-watch": "^4.2.3",
        "tsconfig-paths-jest": "0.0.1",
        "typescript": "^3.8.3"
    },
    "majestic": {
        "args": [
            "--runInBand --detectOpenHandles --config=./jest.config.js"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run build",
            "pre-push": "npm run build"
        }
    }
}
